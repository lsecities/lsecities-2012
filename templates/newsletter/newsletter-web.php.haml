- macro item_content(item)
  -if item.thumbnail
    .item-thumbnail
      = item.thumbnail|raw
  %h1
    = item.title|raw
  %div
    = item.content|raw
- macro section_content(section)
  %h1.title-container
    %span
      = section.title
  = section.content|raw
  -for item in section.items
    -if item.layout == 'wide'
      %span.section-item.wide{ :id => 'item' ~ item.ID}
        = _self.item_content(item)
    -else
      .section-item.narrow{ :id => 'item' ~ item.ID}
        = _self.item_content(item)
!!! 5
%html
  %head
    %title
      = title
    %link{ :rel=>'stylesheet', :id=>'twentytwelve-style-css', :href=>'//lsecities.net/wp-content/themes/lsecities-alexandria/stylesheets/style.css', :type=>'text/css', :media=>'all'}
  %body#newsletter-2013
    .page-header
      %span.logo
        %a(href = 'http://lsecities.net/')
          %img(src='//lsecities.net/wp-content/themes/lsecities-alexandria/images/logo_lsecities_fullred.png' alt='LSE Cities')
      %h1
        = title
      - for section in sections if section.show_in_toc
        .toc-section
          %div
            %a{:href => "", :target => "_blank"}
              = section.thumbnail|raw
          %div
            %h1.headerTitle
              %a{:href => "", :target => "_blank"}
                %span
                  = section.title
            %ul
              - for item in section.featured_items
                %li
                  %a{ :href => "#item" ~ item.ID }
                    = item.toc_title
    .page-body
      - for section in sections
        - if section.is_news_section
          .newsletter-section.news-section{ :id => 'section' ~ section.ID}
            = _self.section_content(section)
        - else
          .newsletter-section{ :id => 'section' ~ section.ID}
            = _self.section_content(section)
