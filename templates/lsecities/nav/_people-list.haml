- macro people_list_section(group, list_length)
  %section{ :class => "people-list #{group.permalink}" }
    - if list_length > 1
      %h1 #{group.label}
    %ul
      - for person in group.members
        %li{ :id => "p-#{person.permalink}-link", :class => 'person' }
          %a{ :href => "#p-#{person.permalink}" } #{person.full_name}
- if people_list.groups|length
  %nav#whoswho-side-toc
    %dl.in-page-navigation
      %dt #{post_title}
      %dd
        - for group in people_list.groups
          = _self.people_list_section(group, people_list.groups|length)
